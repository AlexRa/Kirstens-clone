<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Yazılı Sohbet" name="chat">
	<text type="string" length="1" name="text_box">
		Sohbet yazı boyutu:
	</text>
	<radio_group name="chat font size">
		<radio_item type="string" length="1" name="radio">
			Küçük
		</radio_item>
		<radio_item type="string" length="1" name="radio2">
			Orta
		</radio_item>
		<radio_item type="string" length="1" name="radio3">
			Büyük
		</radio_item>
	</radio_group>
	<text type="string" length="1" name="text_box2">
		Sohbet yazı rengi:
	</text>
	<color_swatch label="Siz" name="user" />
	<color_swatch label="Diğerleri" name="agent" />
	<color_swatch label="HM" name="im" width="54"/>
	<color_swatch label="Sistem" name="system" left_delta="58"  />
	<color_swatch label="Hatalar" name="script_error" />
	<color_swatch label="Objeler" name="objects" />
	<color_swatch label="Sahip" name="owner" />
	<color_swatch label="Baloncuk" name="background" width="54"/>
	<color_swatch label="Adresler" name="links" left_delta="58" />
	<text type="string" length="1" name="text_box8">
		Betik hataları:
	</text>
	<check_box label="Betik hatalarını ve uyarılarını normal sohbet olarak göster"
	     name="script_errors_as_chat" />
	<text type="string" length="1" name="text_box3">
		Sohbet konsolu:
	</text>
	<spinner label="Sohbeti gizle" name="fade_chat_time" />
	<text type="string" length="1" name="text_box4">
		(saniye)
	</text>
	<text type="string" length="1" name="text_box5">
		(# çizgi)
	</text>
	<slider label="Saydamlık" name="console_opacity" />
	<check_box label="Tam ekran genişliğini kullan(Yeniden başlatmak gerektirir)"
	     name="chat_full_width_check" />
	<text type="string" length="1" name="text_box6">
		Sohbet seçenekleri:
	</text>
	<check_box label="Sohbet ederken yön tuşları her zaman karakteri hareket ettirir"
	     name="arrow_keys_move_avatar_check" />
	<check_box label="Genel sohbette zaman imlerini göster" name="show_timestamps_check" />
	<check_box label="Sohbet ederken yazma animasyonunu oynat" name="play_typing_animation" />
	<text type="string" length="1" name="text_box7">
		Baloncuk Sohbeti:
	</text>
	<check_box label="Sohbet baloncuklarını göster" name="bubble_text_chat" />
	<slider label="Saydamlık" name="bubble_chat_opacity" />
</panel>
