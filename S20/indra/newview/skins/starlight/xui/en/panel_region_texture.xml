     width="100" />
<!--southwest high-->
    <spinner
     follows="left|top"
     height="20"
     increment="0.5"
     label="High"
     label_width="37"
     layout="topleft"
     left="10"
     max_val="500"
     min_val="-500"
     name="height_range_spin_0"
     top_delta="20"
     width="100" />
<!--  southeast high-->
    <spinner
     follows="left|top"
     height="20"
     increment="0.5"
     label="High"
