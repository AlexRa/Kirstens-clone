     width="300">
        Texture Elevation Ranges
    </text>
    <text
     follows="left|top"
     height="20"
     layout="topleft"
     left="51"
     name="height_text_lbl6"
     top="185"
     width="100">
        Northwest
    </text>
    <text
     follows="left|top"
     height="20"
     layout="topleft"
     left_pad="10"
     name="height_text_lbl7"
     top_delta="0"
     width="100">
        Northeast
    </text>
