     type="string"
     length="1"
     follows="left|top"
     font="SansSerif"
     height="20"
     layout="topleft"
     left_delta="50"
     name="region_text"
     top_delta="0"
     width="400">
        unknown
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="20"
     layout="topleft"
     left="10"
     name="detail_texture_text"
     top="36"
     width="300">
        Terrain Textures (requires 512x512, 24 bit .tga files)
    </text>
    <texture_picker
     follows="left|top"
     height="100"
     layout="topleft"
     left_delta="0"
     name="texture_detail_0"
     top_delta="20"
     width="100" />
