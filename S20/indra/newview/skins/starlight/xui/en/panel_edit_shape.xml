<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
 <panel
	 follows="all"
	 height="400"
	 layout="topleft"
	 left="10"
	 name="edit_shape_panel"
	 top_pad="10"
	 width="313" >
	 <panel
		 border="true"
		 follows="top|left"
		 height="50"
		 left="10"
		 layout="topleft"
		 name="avatar_sex_panel"
		 top="10"
		 width="293" >
   			<text 
			 follows="top|left"
			 height="16"
			 layout="topleft"
			 left="10"
			 name="gender_text"
			 width="303">
				Gender:
			</text>
		   <radio_group
			 follows="all"
			 left="10"
             height="34"
             layout="topleft"
             name="sex_radio"
			 top_pad="3"
			 width="200" >
                <radio_item
					follows="all"
                 height="16"
                 label="Female"
                 layout="topleft"
                 left="10"
                 name="radio"
                 width="82" />
                <radio_item
					follows="all"
                 height="16"
                 label="Male"
                 layout="topleft"
                 left_pad="10"
                 name="radio2"
                 width="82" />
            </radio_group>
	 </panel>
