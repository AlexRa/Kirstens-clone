<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 class="panel_preference"
 follows="left|top|right|bottom"
 height="160"
 label="Audio &amp; Video"
 layout="topleft"
 name="Media panel"
 width="175">
    <slider
     control_name="AudioLevelMaster"
     follows="left|top"
     height="15"
     increment="0.05"
     initial_value="0.5"
     label="Master"
     label_width="55"
     layout="topleft"
     left="10"
     name="System Volume"
     show_text="false"
     top="5"
     volume="true">
        <slider.commit_callback
         function="Pref.setControlFalse"
         parameter="MuteAudio" />
    </slider>
    <button
     control_name="MuteAudio"
     follows="top|right"
     height="16"
     image_selected="icn_speaker-muted_dark.tga"
     image_unselected="icn_speaker_dark.tga"
     is_toggle="true"
     layout="topleft"
     left_delta="140"
     name="mute_audio"
     tab_stop="false"
     top_delta="-1"
     width="25" />
