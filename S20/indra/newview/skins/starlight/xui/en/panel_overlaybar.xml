<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="left|right|bottom|top"
 height="200"
 layout="topleft"
 left="-1"
 mouse_opaque="false"
 name="overlay"
 use_bounding_rect="true"
 width="728">
    <layout_stack
     bottom="200"
     follows="left|right|bottom"
     height="200"
     layout="topleft"
     left="0"
     mouse_opaque="false"
     name="overlay_layout_panel"
     orientation="horizontal"
     right="-1"
     use_bounding_rect="true">
        <layout_panel
         bottom="200"
         layout="topleft"
         left="0"
         min_width="420"
         mouse_opaque="false"
         name="main_panel"
         use_bounding_rect="true"
         user_resize="false"
         width="420">
            <layout_stack
             bottom="10"
             follows="left|right|bottom|top"
             height="50"
             layout="topleft"
             left="0"
             mouse_opaque="false"
             name="chatbar_and_buttons"
             right="420"
             use_bounding_rect="true">
                <layout_panel
                 follows="left|bottom|right|top"
                 height="0"
                 layout="topleft"
                 left="0"
                 min_height="20"
                 min_width="100"
                 mouse_opaque="false"
                 name="padding"
                 top="50"
                 use_bounding_rect="true"
                 user_resize="false"
                 width="420" />
                <layout_panel
                 auto_resize="false"
                 follows="left|bottom|right|top"
                 height="20"
                 layout="topleft"
                 left_delta="0"
                 min_height="20"
                 min_width="100"
                 mouse_opaque="false"
                 name="state_buttons"
                 top_delta="-20"
                 use_bounding_rect="true"
                 user_resize="false"
                 width="420">
                    <button
                     follows="left|bottom"
                     height="20"
                     label="IM Received"
                     label_selected="IM Received"
                     layout="topleft"
                     left="0"
                     name="IM Received"
                     tool_tip="You have an instant message pending. Click to show IMs."
                     top="-1"
                     width="102">
                        <button.commit_callback
                         function="Floater.Show"
                         parameter="communicate" />
                    </button>
                    <button
                     follows="left|bottom"
                     height="20"
                     label="Set Not Busy"
                     label_selected="Set Not Busy"
                     layout="topleft"
                     left_pad="12"
                     name="Set Not Busy"
                     tool_tip="Chat and IM is hidden for you. Click here to set yourself not busy."
                     top_delta="0"
                     width="102" />
                    <button
                     follows="left|bottom"
                     height="20"
                     label="Flycam"
                     label_selected="Flycam"
                     layout="topleft"
                     left_pad="13"
                     name="Flycam"
                     tool_tip="Your camera is under joystick control, click here to release it."
                     top_delta="0"
                     width="102" />
                    <button
                     follows="left|bottom"
                     height="20"
                     label="Mouselook"
                     label_selected="Mouselook"
                     layout="topleft"
                     left_pad="12"
                     name="Mouselook"
                     tool_tip="Use mouse to steer your view. If you have a gun, clicking will shoot."
                     top_delta="0"
                     width="102" />
                    <button
                     follows="left|bottom"
                     height="20"
                     label="Stand Up"
                     label_selected="Stand Up"
                     layout="topleft"
                     left_pad="12"
                     name="Stand Up"
                     tool_tip="Click here to stand up"
                     top_delta="0"
                     width="102" />
                </layout_panel>
                <layout_panel
                 auto_resize="false"
                 bottom="50"
                 filename="panel_chat_bar.xml"
                 follows="left|right|bottom"
                 layout="topleft"
                 left="0"
                 min_height="24"
                 mouse_opaque="false"
                 name="chat_bar"
                 use_bounding_rect="true"
                 width="395" />
            </layout_stack>
        </layout_panel>
        <layout_panel
         auto_resize="false"
         height="24"
         layout="topleft"
         left_delta="0"
         min_width="220"
         mouse_opaque="false"
         name="media_remote_container"
         top_delta="-14"
         use_bounding_rect="true"
         user_resize="false"
         width="220">
            <panel
             bottom="24"
             height="26"
             layout="topleft"
             name="media_remote"
             width="220" />
        </layout_panel>
        <layout_panel
         auto_resize="false"
         height="24"
         layout="topleft"
         left_delta="0"
         min_width="130"
         mouse_opaque="false"
         name="voice_remote_container"
         top_delta="0"
         use_bounding_rect="true"
         user_resize="false"
         width="128">
            <panel
             bottom="24"
             height="26"
             layout="topleft"
             name="voice_remote"
             width="128" />
        </layout_panel>
    </layout_stack>
</panel>
