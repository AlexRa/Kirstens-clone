<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Informazioni look" name="look_info">
	<panel.string name="not_available">
		(non pert.)
	</panel.string>
	<panel.string name="unknown">
		(sconosciuto)
	</panel.string>
	<panel label="Vestiario" name="look_management_panel">
		<accordion name="look_management_accordion">
			<accordion_tab name="look_group" title="Gruppo vestiario">
				<panel name="look_info_group_bar">
					<text name="curr_look_name">
						Look: [LOOK]
					</text>
					<button label="Indossa" name="wear_look_btn"/>
					<scroll_list name="look_items_list">
						<scroll_list.columns label="Articolo look" name="look_item"/>
						<scroll_list.columns label="Ordina in base a articolo del vestiario" name="look_item_sort"/>
					</scroll_list>
					<button label="-" name="remove_from_look_btn"/>
				</panel>
			</accordion_tab>
			<accordion_tab name="inventory_group" title="Il mio inventario">
				<panel name="lower_look_accordion">
					<panel name="inventory_bar">
						<text name="inventory_info_text">
							Il mio inventario
						</text>
						<combo_box name="inventory_filter" tool_tip="Mostra solo i tipi di inventario selezionati"/>
					</panel>
					<panel name="look_item_filter_bar">
						<filter_editor label="Filtro articoli del vestiario" name="look_item_filter"/>
					</panel>
				</panel>
			</accordion_tab>
		</accordion>
	</panel>
	<panel name="button_bar">
		<button label="Aggiungi" name="add_item_btn"/>
		<button label="Rimuovi" name="remove_item_btn"/>
		<button label="SU" name="up_btn"/>
		<button label="GIÃ™" name="down_btn"/>
	</panel>
</panel>
