<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="情報を確認" name="look_info">
	<panel.string name="not_available">
		（該当なし）
	</panel.string>
	<panel.string name="unknown">
		（不明）
	</panel.string>
	<panel label="アウトフィット" name="look_management_panel">
		<accordion name="look_management_accordion">
			<accordion_tab name="look_group" title="アウトフィットグループ">
				<panel name="look_info_group_bar">
					<text name="curr_look_name">
						確認： [LOOK]
					</text>
					<button label="装着" name="wear_look_btn"/>
					<scroll_list name="look_items_list">
						<scroll_list.columns label="アイテムを確認" name="look_item"/>
						<scroll_list.columns label="アウトフィットアイテムの並べ替え" name="look_item_sort"/>
					</scroll_list>
					<button label="-" name="remove_from_look_btn"/>
				</panel>
			</accordion_tab>
			<accordion_tab name="inventory_group" title="持ち物">
				<panel name="lower_look_accordion">
					<panel name="inventory_bar">
						<text name="inventory_info_text">
							持ち物
						</text>
						<combo_box name="inventory_filter" tool_tip="選択した持ち物の種類だけ表示"/>
					</panel>
					<panel name="look_item_filter_bar">
						<filter_editor label="アウトフィットアイテムフィルター" name="look_item_filter"/>
					</panel>
				</panel>
			</accordion_tab>
		</accordion>
	</panel>
	<panel name="button_bar">
		<button label="追加" name="add_item_btn"/>
		<button label="削除" name="remove_item_btn"/>
		<button label="上" name="up_btn"/>
		<button label="下" name="down_btn"/>
	</panel>
</panel>
