					<panel name="first_life_image_panel">
						<text name="title_rw_descr_text" value="Vie réelle :"/>
					</panel>
					<text name="title_member_text" value="Résident depuis :"/>
					<text name="title_acc_status_text" value="Statut du compte :"/>
