	<line_editor label="Для чату натисніть тут" name="Chat Editor" tool_tip="Натисніть Enter -- сказати, Ctrl+Enter -- крикнути"/>
	<flyout_button label="Сказати" name="Say" tool_tip="(Enter)">
		<flyout_button_item name="shout_item">
			Крикнути
		</flyout_button_item>
		<flyout_button_item name="say_item">
			Сказати
		</flyout_button_item>
		<flyout_button_item name="whisper_item">
			Прошептати
		</flyout_button_item>
	</flyout_button>
	<combo_box label="Жести" name="Gesture"/>
	<string name="gesture_label">
		Жести
	</string>
</panel>
